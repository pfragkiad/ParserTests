<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Company>Pavlos Fragkiadoulakis</Company>
    <Description>Parser Library that can be customized for multiple data types, functions with multple arguments, postfix and prefix multiple operators etc.
Documentation and examples are pending.</Description>
    <Version>1.0.5</Version>
    <Authors>Pavlos Fragkiadoulakis</Authors>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <Copyright>(c) 2022 Paulus Stuff</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appsettings3.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="appsettings3.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="6.0.0" />
    <PackageReference Include="Serilog.AspNetCore" Version="5.0.0" />
  </ItemGroup>

</Project>
